<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/workload_list_row_parent"
    android:orientation="vertical">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_simple_parent"
        >
        <include
		    android:id="@+id/workload_list_date_header"  
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    layout="@layout/workload_list_date_item"
		  /> 
	    <View
	        android:id="@+id/workload_list_row_simple_parent_invis_cover"
	        android:visibility="gone"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:background="@android:color/transparent"
	        />
    
    </RelativeLayout>

    <!-- Dropdown -->
    <LinearLayout 
        android:id="@+id/workload_list_row_dropdown"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        >
    </LinearLayout>
    
</LinearLayout>