<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classroom_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <fragment android:name="com.carlnolan.cloudacademy.courses.CourseListFragment"
              android:id="@+id/course_list_fragment"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />

    <fragment android:name="com.carlnolan.cloudacademy.courses.SectionListFragment"
              android:id="@+id/section_list_fragment"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />

    <fragment android:name="com.carlnolan.cloudacademy.courses.LessonListFragment"
              android:id="@+id/lesson_list_fragment"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />

    <!-- fragment android:name="com.carlnolan.cloudacademy.courses.LessonViewerFragment"
              android:id="@+id/lesson_viewer_fragment"
